<div class="row">
  <% for post in @posts %>
    <div class="col-3">
      <h4>
       <!-- finding the user that created the post -->
        <% user = User.find_by({ "id" => post["user_id"] }) %>
      <!-- show the user's first name -->
       <% if user %>
          <%= user["first_name"] %>          
        <% end %>
      </h4>
      <img class="img-fluid" src="<%= post["image"] %>" class="w-full">
      <p><%= post["body"] %></p>
    </div>
  <% end %>
</div>